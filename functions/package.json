{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint . --fix",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --watch",
    "tests": "jest"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.24.1",
    "lodash": "^4.17.15",
    "uniqid": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "pretty-quick --staged",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "private": true
}
